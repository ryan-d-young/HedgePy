{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [ 
        {
            "name": "Server Debugger: Hedgepy",
            "type": "debugpy",
            "request": "launch",
            "program": "src/hedgepy/server/run.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },  
        {
            "name": "CLI Debugger: Hedgepy",
            "type": "debugpy",
            "request": "launch",
            "program": "src/hedgepy/common/cli.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false, 
            "args": [
                "edgar",
                "tickers"
            ]
        },        
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        }
    ]
}